<Window x:Class="VRisingServerManager.VSM_Myupdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRisingServerManager"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="VSM更新程序" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ui:SimpleStackPanel>
            <StackPanel Orientation="Horizontal">
                <ProgressBar
                    x:Name="ProgressBar2"
                    Width="100"
                    Value="{Binding ElementName=ProgressValue, Path=Value, Mode=OneWay}" />
                <ui:NumberBox
                    x:Name="ProgressValue"
                    AutomationProperties.LabeledBy="{Binding ElementName=ProgresLabel}"
                    Minimum="0"
                    Maximum="100"
                    Value="0"
                    SpinButtonPlacementMode="Inline" />
            </StackPanel>
            <Button Content="更新程序运行中，请稍后..." HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top"/>
            <ProgressBar HorizontalAlignment="Center" Height="4" Width="300"/>


        </ui:SimpleStackPanel>
    </Grid>
</Window>
